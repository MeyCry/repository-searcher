{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "src/ts/@types"],
    "rootDir": "./",

    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017"]
  },
  "include": [
    "src/ts/**/*",
    "spec/**/*"
  ],
  "exclude": []
}
